# run a test task
require 'spec_helper_acceptance'

describe 'tasks' do

    results = task_run('support_tasks::kb0285_find_disabled_agents')

    it 'when agent is disabled ' do
      expect(results.first['result']['status']).to contain("Puppet agent is disabled")
	end
      it 'when agent is enabled ' do
      expect(results.first['result']['status']).to contain("Puppet agent is enabled\n")
   end
end
